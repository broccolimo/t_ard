<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--android默认的控件颜色 由该值决定-->
        <item name="colorAccent">@color/SteelBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style parent="android:TextAppearance.Medium" name="Bubble.TextAppearance.Dark">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff7f7f7f</item>
    </style>
    <style parent="Bubble.TextAppearance.Dark" name="Bubble.TextAppearance.Light">
        <item name="android:textColor">#ffeeeeee</item>
    </style>

    <style parent="android:TextAppearance" name="ClusterIcon.TextAppearance">
        <item name="android:textColor">#ffeeeeee</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
